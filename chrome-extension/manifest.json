{
  "manifest_version": 3,
  "name": "Meeting Minutes Automator",
  "version": "0.1.0",
  "description": "Google Meet meeting minutes automation - Walking Skeleton (MVP0)",

  "permissions": [
    "storage",
    "notifications",
    "identity",
    "alarms",
    "offscreen"
  ],

  "oauth2": {
    "client_id": "242619749099-nr7mgj8ebeem0qccg9do7r11rlmkfqfk.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/documents",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },

  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*",
    "https://accounts.google.com/*",
    "https://oauth2.googleapis.com/*",
    "https://docs.googleapis.com/*"
  ],

  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src 'self' ws://localhost:* ws://127.0.0.1:* https://oauth2.googleapis.com https://docs.googleapis.com"
  },

  "background": {
    "service_worker": "dist/background/background.js"
  },

  "action": {
    "default_title": "Meeting Minutes Automator",
    "default_popup": "dist/popup/popup.html"
  }
}
