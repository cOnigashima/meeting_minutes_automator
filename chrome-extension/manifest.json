{
  "manifest_version": 3,
  "name": "Meeting Minutes Automator",
  "version": "0.1.0",
  "description": "Google Meet meeting minutes automation - Walking Skeleton (MVP0)",

  "permissions": [
    "storage",
    "notifications",
    "identity"
  ],

  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*",
    "https://accounts.google.com/*",
    "https://oauth2.googleapis.com/*",
    "https://docs.googleapis.com/*"
  ],

  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src 'self' ws://localhost:* ws://127.0.0.1:* https://oauth2.googleapis.com https://docs.googleapis.com"
  },

  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_title": "Meeting Minutes Automator",
    "default_popup": "dist/popup/popup.html"
  }
}
